APP_NAME=MARley
APP_ENV=dev
LOG_LEVEL=INFO
DEFAULT_LANGUAGE=de

# Data paths
DATA_ROOT=./data
DOCUMENT_ID=2-aend-19-02-25_msc-computer-science_lese

# Service ports (local development)
MARLEY_HOST=127.0.0.1
MARLEY_PORT=8000
PDF_EXTRACTOR_PORT=8001
CHUNKER_PORT=8002
RETRIEVAL_PORT=8003
GENERATOR_PORT=8004

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=llama3.1:latest
OLLAMA_EMBED_MODEL=nomic-embed-text:latest

# Chunking defaults
PDF_CHUNK_MIN_TOKENS=128
PDF_CHUNK_MAX_TOKENS=512
FAQ_CHUNK_ONE_PER_ENTRY=true

# PDF extractor defaults
PDF_EXTRACTOR_OUTPUT_SUFFIX=structured
PDF_EXTRACTOR_KEEP_PREVIOUS_OUTPUTS=false

# Retrieval defaults
RETRIEVAL_TOP_K=8
RRF_K=60
BM25_ENABLED=true
VECTOR_ENABLED=true
HYBRID_ENABLED=true

# Generator defaults
GENERATOR_MAX_CONTEXT_TOKENS=3000
GENERATOR_MAX_OUTPUT_TOKENS=700
GENERATOR_TEMPERATURE=0.2
